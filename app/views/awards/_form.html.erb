<%= simple_form_for award, html: { class: "award form" } do |f| %>
  <% if award.errors.any? %>
    <div class="error-message">
      <%= award.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :body, input_html: { autofocus: true } %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>