<%= stylesheet_link_tag "leaderboard" %>


<div class ="leaderboard">
<table>
  <thead>
    <tr>
      <th style="width: 70%">Username </th>
      <th>Points </th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
    <!-- class adult to any table rows for movies rated other than G or PG -->
      <tr>
        <td><%= link_to  company.username, company, class:"genText", style:"align:middle; max-width: 80%"%></td>
        <td><%= company.accumulated_points %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>