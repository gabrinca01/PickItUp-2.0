<%= simple_form_for follow, html: { class: "follow form" } do |f| %>
  <% if follow.errors.any? %>
    <div class="error-message">
      <%= follow.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.hidden_field :follower,:value => current_user.id %>
  <%= f.hidden_field :followee,value: params[:id] %>
  
  <%= current_user.id %>
  
  <%= f.submit class: "btn btn--secondary" %>
<% end %>