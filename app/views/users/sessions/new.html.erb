<style>
.alert{margin-left:0px;}
</style>
<div class = "loginContainer" style="margin-left:22%">
<h2 class = "loginTitle" >Log in</h2><div class= "leftBlock" style="width:750px" >
<%= simple_form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class:"string password optional" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
     <%= f.submit "Log In", class: 'mybutton'%>
  </div>
</div>
</div>
<% end %>

<%= render "users/shared/links" %>
