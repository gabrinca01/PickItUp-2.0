<%= turbo_frame_tag "new message",target: "_top" do %>
<div class="form-group msg-form">
  <%= form_with(model: [@challenge ,@message], remote: true, class: "d-flex" ) do |f| %>
    <%= f.text_field :msg_txt, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off' %>
    <%= f.submit  'Send' ,id: "sub" , data: { disable_with: false }, class: "genButton", style:"margin:7px" %>
  <% end %>
</div>
<%end%>

<script>

  function flush(){
    console.log("ciao");
    document.getElementById("chat-text").value = "";
  }
  document.getElementById("sub").addEventListener("submit",flush);

</script>