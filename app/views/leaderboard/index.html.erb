<%= stylesheet_link_tag "leaderboard" %>


<div class ="leaderboard">
<table>
  <thead>
    <tr>
      <th style="width: 70%">Username </th>
      <th>Points </th>
    </tr>
  </thead>

  <tbody>
    <% @leaderboard.each do |movie| %>
    <!-- class adult to any table rows for movies rated other than G or PG -->
      <tr>
        <td><%= movie.username %></td>
        <td><%= movie.accumulated_points %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>